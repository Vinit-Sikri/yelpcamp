    <% layout('layouts/biolerplate')%>
    <h1 class="mb-2 mt-5">
        All Locations
    </h1>

    <div>
       <b><label for="bn">Add a new Campground</label></b>
        <a id="bn"class="btn btn-primary" href="/campgrounds/new">ADD</a>
    </div>

    
        <% for(let camp of campgrounds){ %>
       <div class="card bg-info-subtle" mb-5>
        <div class="row">
         <div class="col-md-4">
            <img class="img-fluid" src="<%= camp.image %>">
         </div>

         <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= camp.title%></h5>
                <p class="card-text"><%= camp.description%></p>
                <p class="card-text"><small class="text-muted">
                    <%= camp.location %>
                </small>
            </p>
        <a href="/campgrounds/<%=camp._id%>" class="btn btn-primary">View</a>
         </div>
         </div>
        </div>
       </div>
        <%}%>
    
